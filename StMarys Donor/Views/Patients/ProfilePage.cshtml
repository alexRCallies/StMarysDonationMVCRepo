@model St.Marys_Donor.Models.Patient

@{
    ViewData["Title"] = "ProfilePage";
}

    <body>
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front ">
                    <img src="~/images/@Model.ProfilePicture" alt="Avatar" style="height: 300px; width: 300px;">
                </div>
                <div class="flip-card-back " style="height: 300px; width: 300px;">
                    <h1>@Model.FirstName</h1>
                    <p>@Model.Bio</p>
                    <a asp-action="Details" asp-route-id="@Model.Id">Details</a>
                    <a asp-action="CreateBlog" asp-route-id="@Model.Id">Blog</a>
                    <div id="fb-root"></div>
                    <script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=1396861977224095";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));
                    </script>
                </div>
            </div>
        </div>
        }
    </body>


<h1>Profile Page</h1>

<div>
