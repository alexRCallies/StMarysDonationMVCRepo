@model St.Marys_Donor.Models.Hospital_Administrator

@{
    ViewData["Title"] = "VerifyPatients";
}

<h1>VerifyPatients</h1>

<h4>Patient</h4>
<hr />
@foreach (Patient patient in Model.patients)
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPatients">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@patient.IsVerified" /> Verified?
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

